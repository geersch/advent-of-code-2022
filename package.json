{
  "name": "advent-of-code-2022",
  "version": "1.0.0",
  "description": "Advent of Code 2022",
  "scripts": {
    "day1": "wireit",
    "day2": "wireit",
    "day3": "wireit",
    "day4": "wireit"
  },
  "wireit": {
    "day1": {
      "command": "ts-node ./src/day1",
      "files": ["src/day1/*", "tsconfig.json"]
    },
    "day2": {
      "command": "ts-node ./src/day2",
      "files": ["src/day2/*", "tsconfig.json"]
    },
    "day3": {
      "command": "ts-node ./src/day3",
      "files": ["src/day3/*", "tsconfig.json"]
    },
    "day4": {
      "command": "ts-node ./src/day4",
      "files": ["src/day4/*", "tsconfig.json"]
    }
  },
  "author": "Christophe Geers",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^18.11.10",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "wireit": "^0.9.0"
  }
}
